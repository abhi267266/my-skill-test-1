<h1>Student Details Form</h1>
<form action="/student/create-or-update" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>
  <div class="mb-3">
    <label for="college" class="form-label">College</label>
    <input type="text" class="form-control" id="college" name="college" required>
  </div>
  <div class="mb-3">
    <label for="status" class="form-label">Status</label>
    <select class="form-select" id="status" name="status" required>
      <option value="placed">Placed</option>
      <option value="not_placed">Not Placed</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="dsaFinalScore" class="form-label">DSA Final Score</label>
    <input type="number" class="form-control" id="dsaFinalScore" name="dsaFinalScore" min="1" max="100" required>
  </div>
  <div class="mb-3">
    <label for="webDFinalScore" class="form-label">WebD Final Score</label>
    <input type="number" class="form-control" id="webDFinalScore" name="webDFinalScore" min="1" max="100" required>
  </div>
  <div class="mb-3">
    <label for="reactFinalScore" class="form-label">React Final Score</label>
    <input type="number" class="form-control" id="reactFinalScore" name="reactFinalScore" min="1" max="100" required>
  </div>

  <!-- Multiple Company and Date fields -->
  <div id="companyDatesContainer">
    <div class="mb-3 company-date-group">
      <label for="companyName" class="form-label">Company Name</label>
      <input type="text" class="form-control" name="companyName" required>
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" name="date" required>
    </div>
  </div>
  <button type="button" class="btn btn-primary" onclick="addCompanyDateField()">Add Company and Date</button>

  <div class="mb-3">
    <label for="result" class="form-label">Result</label>
    <select class="form-select" id="result" name="result" required>
      <option value="PASS">PASS</option>
      <option value="FAIL">FAIL</option>
      <option value="On Hold">On Hold</option>
      <option value="Didn’t Attempt">Didn’t Attempt</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
    
   
<script>
  function addCompanyDateField() {
    var container = document.getElementById('companyDatesContainer');
    var group = document.createElement('div');
    group.className = 'mb-3 company-date-group';
    group.innerHTML = `
      <label for="companyName" class="form-label">Company Name</label>
      <input type="text" class="form-control" name="companyName" required>
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" name="date" required>
    `;
    container.appendChild(group);
  }
</script>
    
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
</body>
